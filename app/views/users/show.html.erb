<div class="container" style="color: white; padding-top: 100px; padding-bottom: 100px;" >
  <div class="row">
    <div class="col-sm-10"><h1><%= t ".profile"%></h1></div>
  </div>
  <div class="row">
    <div class="col-sm-3"><!--left col-->
      <div class="text-center">
        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block file-upload">
      </div></hr><br>

      <div class="panel panel-default">
        <div class="panel-heading"><%= link_to t(".edit"), edit_user_path(current_user) %> <i class="fa fa-link fa-1x"></i></div>
      </div>
    </div><!--/col-3-->
    <div class="col-sm-9">
      <div class="tab-content">
        <div class="tab-pane active" id="home">
          <hr>
          <div class="col-xs-6">
            <label for="first_name"><h4><%= t "users.name"%>: </h4></label>
            <label><h4><%= @user.nick_name%></h4></label>
          </div>
          <div class="col-xs-6">
            <label for="email"><h4><%= t "users.email"%>: </h4></label>
            <label><h4><%= @user.email%></h4></label>
          </div>
        </div>
      </div><!--/tab-content-->
      Lich su nhan xet
      <br>
      <%= paginate @reviews %>
      <br>
      <% @reviews.each do |review| %>

      <%= link_to review.game.name, game_path(review.game) %>
      <%= render review %>
      <br>
      <% end %>
      <%= paginate @reviews %>
    </div><!--/col-9-->
  </div>
</div><!--/row-->
