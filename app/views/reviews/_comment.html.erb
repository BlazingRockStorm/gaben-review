<%= form_for @comment, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :game_id, value: game_id %>
  <%= f.hidden_field :score %>

  <div class="uk-margin" uk-margin>
    <div uk-form-custom="target: true">
      <%= f.text_field :content, id: "review_text_field", class: "uk-input uk-form-width-medium", placeholder: "Enter your comment" %>
    </div>
    <%= f.submit "Send", class: "uk-button uk-button-default", style: "font-size:1em" %>
  </div>
<% end %>
