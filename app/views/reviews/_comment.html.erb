<%= form_for @comment, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :game_id, value: game_id %>
  <%= f.hidden_field :score %>

  <%= f.label :content, "comment" %>
  <div class="wthreeratingaits star_review">
    <%= render "shared/star_review", score: @comment.score %>
  </div>
  <%= f.text_field :content, id: "review_text_field" %>
  <%= f.submit "Send", class: "uk-button uk-button-primary", style: "font-size:1em" %>
<% end %>
