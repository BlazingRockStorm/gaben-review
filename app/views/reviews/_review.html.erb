<li style="text-align: left; list-style-type:square;"><%= review.content %></li>
<%= render review.reply %>
<div id="<%= "reply_form_#{review.id}" %>">
  <%= form_for @new_reply, remote: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :review_id, value: review.id %>

    <%= f.label :content, "Reply" %>
    <%= f.text_field :content, class: "reply_text_field", id: "reply_#{review.id}_text_field" %>
    <%= f.submit "Send", class: "uk-button uk-button-primary", style: "font-size:1em" %>
  <% end %>
</div>
